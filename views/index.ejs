  <script>
    // File handling
    const videoInput = document.getElementById('videoInput');
    const fileLabel = document.getElementById('fileLabel');
    const fileName = document.getElementById('fileName');
    const fileNameText = document.getElementById('fileNameText');
    const uploadForm = document.getElementById('uploadForm');
    const loadingOverlay = document.getElementById('loadingOverlay');
    const submitBtn = document.getElementById('submitBtn');

    videoInput.addEventListener('change', function() {
      if (this.files && this.files[0]) {
        const file = this.files[0];
        const sizeMB = (file.size / (1024 * 1024)).toFixed(2);
        fileNameText.textContent = `‚úì ${file.name} (${sizeMB} MB)`;
        fileName.classList.add('show');
        fileLabel.classList.add('active');
      }
    });

    fileLabel.addEventListener('dragover', (e) => {
      e.preventDefault();
      fileLabel.classList.add('active');
    });

    fileLabel.addEventListener('dragleave', () => {
      if (!videoInput.files.length) fileLabel.classList.remove('active');
    });

    fileLabel.addEventListener('drop', (e) => {
      e.preventDefault();
      if (e.dataTransfer.files && e.dataTransfer.files[0]) {
        videoInput.files = e.dataTransfer.files;
        const file = e.dataTransfer.files[0];
        const sizeMB = (file.size / (1024 * 1024)).toFixed(2);
        fileNameText.textContent = `‚úì ${file.name} (${sizeMB} MB)`;
        fileName.classList.add('show');
        fileLabel.classList.add('active');
      }
    });

    // Mode tabs
    document.querySelectorAll('.mode-tab').forEach(tab => {
      tab.addEventListener('click', function() {
        document.querySelectorAll('.mode-tab').forEach(t => t.classList.remove('active'));
        document.querySelectorAll('.mode-content').forEach(c => c.classList.remove('active'));
        
        this.classList.add('active');
        const mode = this.dataset.mode;
        document.getElementById(`${mode}-mode`).classList.add('active');
      });
    });

    // Radio options
    document.querySelectorAll('.radio-option').forEach(option => {
      option.addEventListener('click', function() {
        const radio = this.querySelector('input[type="radio"]');
        const name = radio.name;
        
        document.querySelectorAll(`input[name="${name}"]`).forEach(r => {
          r.closest('.radio-option').classList.remove('checked');
        });
        
        this.classList.add('checked');
        radio.checked = true;
      });
    });

    // Form submission
    uploadForm.addEventListener('submit', function(e) {
      const file = videoInput.files[0];
      if (!file) {
        e.preventDefault();
        alert('Please select a video file');
        return;
      }
      if (file.size > 100 * 1024 * 1024) {
        e.preventDefault();
        alert('File size must be less than 100MB');
        return;
      }
      
      submitBtn.disabled = true;
      loadingOverlay.classList.add('show');
      
      // Simulate loading steps
      setTimeout(() => document.getElementById('step2').classList.add('active'), 1000);
      setTimeout(() => document.getElementById('step3').classList.add('active'), 3000);
      setTimeout(() => document.getElementById('step4').classList.add('active'), 5000);
    });
  </script>
</body>
</html>
